pipeline {    
    options { skipDefaultCheckout() }
     agent {label 'master'} 
     tools {
     maven 'mvn'
     }
      
    stages { 
     stage('SCM') {
            steps {
               
                git  branch: 'main', url: 'https://github.com/AhmedRomdhani16/PROJECT-CI.git'
                 
            }
        }
     stage('test'){
            steps {
            sh "mvn test"
            }
            
            }
            
     stage('build'){
            steps {
            sh "mvn --version"
            sh" mvn clean install"
            
            }
            }
}
}
